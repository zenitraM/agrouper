
<div class="container">
	<header id="title">
		<h1>Agrouper</h1>
	</header>
	<section id="offers">
		<% @offers.each_with_index { |offer, index| %>

			<% if index%2 == 0 %>

				<div class="row show-grid">

			<% end %>

			<div class="span6 well">

				<div class="row">

					<div class="span5">

						<h2 class="offer-title"><%= offer.title %></h2>
					</div>

					<div class="span1">

						<a class="btn btn-primary btn-large" href="<%= url_for :controller => :order, :action => :new, :id => offer.id %>">

							Crear

						</a>

					</div>

				</div>

			</div>

			<% if index%2 != 0 %>

				</div>

			<% end }%>

	</section>
	
</div>

